<%- include('../partials/head') %>
<%- include('../partials/header') %>

<div class="login-bg">
    <main>
        <h1><%= title %></h1>
        <%- messages() %>

        <div class="register-container">
            <form id="registerForm" action="/account/register" method="post" autocomplete="off">
                <fieldset>
                    <legend>All fields are required.</legend>

                    <label for="account_firstname">First name:</label>
                    <input type="text" id="account_firstname" name="account_firstname" required>

                    <label for="account_lastname">Last name:</label>
                    <input type="text" id="account_lastname" name="account_lastname" required>

                    <label for="account_email">Email Address:</label>
                    <input type="email" id="account_email" name="account_email" required>

                    <label for="account_password">Password</label>
                    <input type="password" id="account_password" name="account_password" required minlength="12">

                    <small>
                        Passwords must be minimum of 12 characters and include
                        1 capital letter, 1 number and 1 special character.
                    </small>

                    <button type="button" id="show-password">Show Password</button>
                    <button type="submit">Register</button>
                </fieldset>
            </form>

            <div class="login-link">
                Already have an account? <a href="/account/login">Login</a>
            </div>
        </div>
    </main>
</div>

<%- include('../partials/footer') %>
<%- include("../partials/head") %>
    <%- include('../partials/header') %>

        <div class="home-content">
            <%- include('../partials/nav') %>
                <main>
                    <h1>Account Management</h1>

                    <% if (typeof message !=='undefined' && message && message.length> 0) { %>
                        <div class="flash-message">
                            <%= message[0] %>
                        </div>
                        <% } %>
                            <% if (typeof errors !=='undefined' && errors && errors.length> 0) { %>
                                <div class="errors">
                                    <%= errors %>
                                </div>
                                <% } %>

                                    <h2>Welcome <%= locals.accountData.account_firstname %>
                                    </h2>

                                    <p>You're logged in.</p>

                                    <a href="/account/update/<%= locals.accountData.account_id %>"
                                        title="Edit your account information and password">
                                        Edit Account Information
                                    </a>

                                    <% if (locals.accountData.account_type==='Employee' ||
                                        locals.accountData.account_type==='Admin' ) { %>

                                        <h3>Inventory Management</h3>
                                        <p>
                                            <a href="/inv/" title="Manage inventory items and classifications">
                                                Manage Inventory
                                            </a>
                                        </p>

                                        <% } %>

                </main>
        </div>

        <%- include('../partials/footer') %>
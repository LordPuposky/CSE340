<%- include("../partials/head") %>
<%- include('../partials/header') %>

<div class="home-content">
    <%- include('../partials/nav') %>
    <main>
        <h1>Account Management</h1>

        <!-- Flash message for success/failure notifications -->
        <% if (locals.message && message.length > 0) { %>
            <div class="flash-message">
                <%= message %>
            </div>
        <% } %>

        <!-- Task 3: Greeting with first name for ALL account types -->
        <% if (locals.accountData && locals.accountData.account_firstname) { %>
            <h2>Welcome <%= accountData.account_firstname %></h2>
        <% } else { %>
            <p>You're logged in.</p>
        <% } %>

        <!-- Task 3: Update account link for ALL clients (above Inventory Management) -->
        <% if (locals.accountData && locals.accountData.account_id) { %>
            <p>
                <a href="/account/update/<%= accountData.account_id %>"
                    title="Edit your account information and password">
                    Update Account Information
                </a>
            </p>
        <% } %>

        <!-- Task 3: Inventory Management (ONLY for Employee and Admin) -->
        <% if (locals.accountData && (accountData.account_type === 'Employee' || accountData.account_type === 'Admin')) { %>
            <h3>Inventory Management</h3>
            <p>
                <a href="/inv/" title="Manage inventory items and classifications">
                    Manage Inventory
                </a>
            </p>
        <% } %>

    </main>
</div>

<%- include('../partials/footer') %>
<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } %>

        <% if (vehicles && vehicles.length > 0) { %>
            <div class="vehicle-grid">
                <% vehicles.forEach(function(vehicle) { %>
                    <div class="grid-item">
                        <img src="<%= vehicle.inv_thumbnail %>"
                            alt="Image of <%= vehicle.inv_make %> <%= vehicle.inv_model %>">
                        <h2>
                            <a href="/inv/detail/<%= vehicle.inv_id %>">
                                <%= vehicle.inv_make %>
                                    <%= vehicle.inv_model %>
                            </a>
                        </h2>
                        <span class="price">$<%= vehicle.inv_price %></span>
                        <div class="actions">
                            <a href="/inv/edit/<%= vehicle.inv_id %>">Edit</a>
                            <form action="/inv/delete-inventory" method="post" style="display:inline;">
                                <input type="hidden" name="inv_id" value="<%= vehicle.inv_id %>" />
                                <button type="submit"
                                    onclick="return confirm('Are you sure you want to delete this vehicle?')">Delete</button>
                            </form>
                        </div>
                    </div>
                    <% }) %>
            </div>
            <% } else { %>
                <p class="notice">Sorry, no matching vehicles could be found.</p>
                <% } %>
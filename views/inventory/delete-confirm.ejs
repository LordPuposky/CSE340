<%- include("../partials/head") %>
    <%- include('../partials/header') %>

        <div class="home-content">
            <%- include('../partials/nav') %>

                <main>
                    <h1>Delete <%= locals.inv_make %>
                            <%= locals.inv_model %>
                    </h1>

                    <% if (locals.errors) { %>
                        <ul class="notice">
                            <% errors.forEach(error=> { %>
                                <li>
                                    <%= error.msg %>
                                </li>
                                <% }) %>
                        </ul>
                        <% } %>

                            <div class="delete-container">
                                <div class="delete-warning">
                                    <strong>CONFIRM DELETION</strong> - The deletion is permanent.
                                </div>

                                <form action="/inv/delete" method="post">
                                    <fieldset class="delete-form">

                                        <label for="inv_make">Make</label>
                                        <input type="text" id="inv_make" name="inv_make" value="<%= locals.inv_make %>"
                                            readonly>

                                        <label for="inv_model">Model</label>
                                        <input type="text" id="inv_model" name="inv_model"
                                            value="<%= locals.inv_model %>" readonly>

                                        <label for="inv_price">Price</label>
                                        <input type="text" id="inv_price" name="inv_price"
                                            value="<%= locals.inv_price %>" readonly>

                                        <label for="inv_year">Year</label>
                                        <input type="text" id="inv_year" name="inv_year" value="<%= locals.inv_year %>"
                                            readonly>

                                        <input type="hidden" name="inv_id" value="<%= locals.inv_id %>">

                                        <button type="submit" class="delete-button">Delete Item</button>
                                    </fieldset>
                                </form>
                            </div>
                </main>
        </div>

        <%- include('../partials/footer') %>

            <style>
                .delete-container {
                    max-width: 500px;
                    margin: 2rem auto;
                    background: linear-gradient(135deg, #1e90ff 0%, #00bfff 100%);
                    padding: 2rem;
                    border-radius: 12px;
                    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
                }

                .delete-warning {
                    background: rgba(255, 255, 255, 0.2);
                    color: white;
                    padding: 1rem;
                    border-radius: 8px;
                    text-align: center;
                    margin-bottom: 1.5rem;
                    font-size: 0.95rem;
                    letter-spacing: 0.5px;
                }

                .delete-form {
                    border: none;
                    padding: 0;
                    display: flex;
                    flex-direction: column;
                    gap: 1rem;
                }

                .delete-form label {
                    color: #fff;
                    font-weight: 600;
                    font-size: 0.9rem;
                    margin-bottom: 0.25rem;
                    text-transform: capitalize;
                }

                .delete-form input[type="text"] {
                    padding: 0.75rem;
                    border: 2px solid rgba(255, 255, 255, 0.3);
                    border-radius: 6px;
                    font-size: 1rem;
                    background: rgba(255, 255, 255, 0.95);
                    color: #333;
                    transition: all 0.3s ease;
                }

                .delete-form input[readonly] {
                    background: rgba(255, 255, 255, 0.8);
                    cursor: not-allowed;
                }

                .delete-button {
                    margin-top: 1rem;
                    padding: 0.9rem 2rem;
                    background: #dc3545;
                    color: white;
                    border: none;
                    border-radius: 6px;
                    font-size: 1rem;
                    font-weight: 600;
                    cursor: pointer;
                    transition: all 0.3s ease;
                    text-transform: uppercase;
                    letter-spacing: 1px;
                    box-shadow: 0 4px 12px rgba(220, 53, 69, 0.3);
                }

                .delete-button:hover {
                    background: #c82333;
                    transform: translateY(-2px);
                    box-shadow: 0 6px 16px rgba(220, 53, 69, 0.4);
                }

                .delete-button:active {
                    transform: translateY(0);
                    box-shadow: 0 2px 8px rgba(220, 53, 69, 0.3);
                }

                main h1 {
                    text-align: center;
                    color: #2c3e50;
                    margin-bottom: 1rem;
                    font-size: 2rem;
                }

                /* Responsive */
                @media (max-width: 600px) {
                    .delete-container {
                        margin: 1rem;
                        padding: 1.5rem;
                    }

                    main h1 {
                        font-size: 1.5rem;
                    }
                }
            </style>
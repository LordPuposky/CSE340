<%- include("../partials/head") %>
<div class="home-content">
    <%- include('../partials/header') %>
    <%- include('../partials/nav') %>

    <main>
        <h1>Add New Vehicle</h1>

        <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
            <ul class="notice">
                <% errors.forEach(error => { %>
                    <li><%= error.msg %></li>
                <% }) %>
            </ul>
        <% } %>

        <form action="/inv/add-inventory" method="post">
            <fieldset>
                <legend>Vehicle Information</legend>

                <label for="inv_make">Make</label>
                <input type="text" id="inv_make" name="inv_make" required maxlength="50" placeholder="e.g., Honda, Toyota">

                <label for="inv_model">Model</label>
                <input type="text" id="inv_model" name="inv_model" required maxlength="50" placeholder="e.g., Civic, Camry">

                <label for="inv_year">Year</label>
                <input type="number" id="inv_year" name="inv_year" required min="1900" max="2099">

                <label for="inv_description">Description</label>
                <textarea id="inv_description" name="inv_description" required maxlength="500"></textarea>

                <label for="inv_image">Image (URL or path)</label>
                <input type="text" id="inv_image" name="inv_image" required maxlength="255">

                <label for="inv_thumbnail">Thumbnail (URL or path)</label>
                <input type="text" id="inv_thumbnail" name="inv_thumbnail" required maxlength="255">

                <label for="inv_price">Price ($)</label>
                <input type="number" id="inv_price" name="inv_price" required step="0.01" min="0">

                <label for="inv_miles">Miles</label>
                <input type="number" id="inv_miles" name="inv_miles" required min="0">

                <label for="inv_color">Color</label>
                <input type="text" id="inv_color" name="inv_color" required maxlength="20">

                <label for="classification_id">Classification</label>
                <select id="classification_id" name="classification_id" required>
                    <option value="">Select Classification</option>
                    <% classifications.forEach(function(classification) { %>
                        <option value="<%= classification.classification_id %>">
                            <%= classification.classification_name %>
                        </option>
                    <% }) %>
                </select>

                <button type="submit">Add Vehicle</button>
            </fieldset>
        </form>
    </main>
</div>
<%- include('../partials/footer') %>

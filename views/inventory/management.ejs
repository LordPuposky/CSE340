<%- include("../partials/head") %>
<%- include('../partials/header') %>

<div class="home-content">
    <%- include('../partials/nav') %>
    <main>
        <h1>Vehicle Management</h1>
        
        <!-- Flash message for success/failure notifications -->
        <% if (locals.message) { %>
            <div class="notice">
                <%= message %>
            </div>
        <% } %>
        
        <!-- Error messages -->
        <% if (locals.errors && errors.length > 0) { %>
            <div class="errors">
                <% errors.forEach(error => { %>
                    <p><%= error.msg %></p>
                <% }) %>
            </div>
        <% } %>

        <h2>Manage Inventory</h2>
        
        <ul>
            <li><a href="/inv/add-classification">Add New Classification</a></li>
            <li><a href="/inv/add-inventory">Add New Vehicle</a></li>
        </ul>

        <h3>Inventory Items by Classification</h3>
        <p>Choose a classification to see those inventory items:</p>
        
        <%- classificationSelect %>

        <table id="inventoryDisplay"></table>

        <noscript>
            <p class="notice">JavaScript must be enabled to use this page.</p>
        </noscript>

        <script src="/js/inventory.js"></script>
    </main>
</div>

<%- include('../partials/footer') %>